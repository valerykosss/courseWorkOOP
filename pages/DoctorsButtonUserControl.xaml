<UserControl x:Class="CLINICS.DoctorsButtonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLINICS"
             mc:Ignorable="d" 
             x:Name="DoctorsButtonUserCont"
             d:DesignHeight="500" d:DesignWidth="615"
             FontFamily="Montserrat">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Height="360" x:Name="doctorImage" BorderBrush="Transparent" BorderThickness="0" Cursor="Hand" Background="Transparent" Click="ChooseDoctor_Click">
                <Image x:Name="currentDoctorImage"/>
            </Button>
            <TextBlock x:Name="doctorId" FontSize="0.1" Foreground="Transparent"></TextBlock>
            <TextBlock Width="570" x:Name="surnameNamePatronymic" Margin="0 30 0 0"  TextAlignment="Center" TextWrapping="Wrap" FontSize="30" FontWeight="Regular" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
