    <ControlTemplate TargetType="Button" x:Key="EndServiceRegistration">
        <Border CornerRadius="25" Height="55" Width="400" Cursor="Hand" BorderBrush="Black" BorderThickness="2" Background="White" Margin="50 20 50 50">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{TemplateBinding Content}" FontWeight="Bold" FontSize="23" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" />
            </StackPanel>
        </Border>
    </ControlTemplate>


    <ControlTemplate TargetType="Button" x:Key="EndServiceDoctor">
        <Border CornerRadius="18" Height="30" Width="200" Cursor="Hand" BorderBrush="Black" BorderThickness="2" Background="White">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{TemplateBinding Content}" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" />
